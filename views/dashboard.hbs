<h2>Dashboard</h2>

{{#if adsList.length }}
{{#each adsList }}
 <div class="card">
    <div class="card-image waves-effect waves-block waves-light">
      <img class="activator" src="{{author}}" alt="{{firstName}}">
    </div>
    <div class="card-content">
      <span class="card-title activator grey-text text-darken-4">{{firstName}} <i class="material-icons right">more_vert</i></span>
      <p><a href="/ads/{{id}}">Открыть</a></p>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4">{{firstName}}<i class="material-icons right">close</i></span>
      <p>{{description}}</p>
    </div>
  </div>
  {{/each}}
{{else}}
<p>none</p>
{{/if}}